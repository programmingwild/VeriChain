{
  "name": "verichain",
  "version": "1.0.0",
  "description": "Decentralized Proof-of-Achievement system with Soulbound credentials",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:amoy": "hardhat run scripts/deploy.js --network polygonAmoy",
    "deploy:arbitrum": "hardhat run scripts/deploy.js --network arbitrumSepolia",
    "node": "hardhat node",
    "backend": "cd backend && node server.js",
    "frontend": "cd frontend && npm run dev",
    "dev": "concurrently --kill-others-on-fail --names \"CHAIN,API,WEB\" --prefix-colors \"yellow,green,cyan\" \"npm run node\" \"npm run backend\" \"npm run frontend\"",
    "start": "npm run dev",
    "dev:deploy": "npx hardhat run scripts/deploy.js --network localhost"
  },
  "keywords": [
    "blockchain",
    "soulbound",
    "credentials",
    "nft",
    "web3"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "concurrently": "^9.2.1",
    "hardhat": "^2.19.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1"
  }
}
